NODE_ENV=development
PORT=5000

# Local development secrets/config
SESSION_SECRET=dev_change_this_to_a_long_random_secret
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/civic_fixer

# Cloudinary (used for proof uploads and job image upload)
# Format: cloudinary://<api_key>:<api_secret>@<cloud_name>
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>

# Optional client-side Cloudinary variables
VITE_CLOUDINARY_CLOUD_NAME=<cloud_name>
VITE_CLOUDINARY_UPLOAD_PRESET=<upload_preset>
